<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/cadre"
        app:layout_constraintEnd_toEndOf="@+id/cadre"
        app:layout_constraintStart_toStartOf="@+id/cadre"
        app:layout_constraintTop_toTopOf="@+id/cadre" />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cadre"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#FF0000"
        app:strokeWidth="1dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lbl_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="user name "
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cadre"
        app:layout_constraintStart_toStartOf="@+id/cadre"
        app:layout_constraintTop_toBottomOf="@+id/cadre" />
</androidx.constraintlayout.widget.ConstraintLayout>